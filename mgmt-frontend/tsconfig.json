{
	"compileOnSave": false,
	"buildOnSave": false,
  "compilerOptions": {
    "outDir": "./public/",
    "module": "commonjs",
    "target": "es6",
    "noEmitHelpers": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
    "removeComments": true,
    "jsx": "react",
		"types": ["node", "jasmine", "redux"]
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
