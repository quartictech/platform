{
  "extends": "tslint-config-airbnb",
  "rules": {
    "class-name": true,

    // Let's always use braces
    "ext-curly": false,
    "curly": true,

    "max-line-length": [true, 120],
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true,
      "log",
      "debug",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-use-before-declare": false,
    "object-literal-key-quotes": [true, "consistent"],
    "object-shorthand-properties-first": false, // This is unhelpful so disable it
    "one-line": [true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "quotemark": [ true, "double", "jsx-double" ],
    "import-name": false, // This seems more annoying than useful
    "no-increment-decrement": false,  // Otherwise we can't do things like (let i = 0; i < max; i++)
    "variable-name": [true, "check-format", "allow-leading-underscore"]
  }
}
