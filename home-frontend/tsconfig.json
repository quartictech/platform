{
	"compileOnSave": false,
	"buildOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "module": "commonjs",
    "target": "es6",
    "noEmitHelpers": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
    "removeComments": true,
    "jsx": "react",
    "types": ["node", "redux"],
    // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/18484
    "paths": {
      "react": ["node_modules/@types/react"]
    }
},
"exclude": [
  "node_modules",
    "public"
  ]
}
