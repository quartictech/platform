{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "module": "commonjs",
    "target": "es6",
    "noEmitHelpers": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
    "removeComments": true,
    "jsx": "react",
    "types": ["node", "redux"],
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],

    // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/18484
    "paths": {
      "react": ["node_modules/@types/react"]
    }
},
"exclude": [
  "node_modules",
    "public"
  ]
}
